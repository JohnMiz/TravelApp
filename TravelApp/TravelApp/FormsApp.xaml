<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelApp.UI.FormsApp">
    <Application.Resources>
          <ResourceDictionary>

               <Color x:Key="DarkPurple">#5600cc</Color>


               <Style TargetType="Label" x:Key="BoldPurpleLabel">
                    <Setter Property="TextColor" Value="{StaticResource DarkPurple}" />
                    <Setter Property="Font" Value="Bold" />
               </Style>

               <Style TargetType="Button" x:Key="LoginButton">
                    <Setter Property="BackgroundColor" Value="#6e56fd" />
                    <Setter Property="TextColor" Value="White" />
                    <Setter Property="HeightRequest" Value="50" />
                    <Setter Property="CornerRadius" Value="30" />
                    <Setter Property="Font" Value="Bold" />
                    <Setter Property="FontSize" Value="18" />
               </Style>

          </ResourceDictionary>
    </Application.Resources>
</Application>